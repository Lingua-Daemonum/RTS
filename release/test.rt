
# get random hex color
getHex -> String
  result = "#" # hex color
  l = 0        # color cycle
  ? l < 6
    rand = randUInt(0,randUInt(5,15))
    ? rand = 10
      rand = 'a'
    ? rand = 11
      rand = 'b'
    ? rand = 12
      rand = 'c'
    ? rand = 13
      rand = 'd'
    ? rand = 14
      rand = 'e'
    ? rand = 15
      rand = 'f'
    result += rand
    l += 1
    go(1)
  = result

i = 0 # 0-9 counter
c = 0 # main cycles counter
? i < 10
  # sleep
  sleep(1)
  # print and go next char
  print(f"\bg({getHex()}) \c")
  i += 1
  ? i >= 10
    ? c < 300
    ? c < 256
      i = 0
      c += 1
  go(1)
println("\c")